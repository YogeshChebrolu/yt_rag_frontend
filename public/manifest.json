{
    "manifest_version": 3,
    "name": "YT Chatbot",
    "version": "1.0.0",
    "description": "A chatbot extension that provides RAG-based chat context for YouTube videos.",
    "permissions": [
      "scripting", 
      "tabs", 
      "storage", 
      "activeTab",
      "declarativeContent",
      "sidePanel"
    ],
    "icons": {
      "16":"icons/logo.png",
      "48":"icons/logo.png",
      "128":"icons/logo.png"
    },
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://*.supabase.co/*",
      "http://localhost:*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Open YouTube Chatbot"
    },
    "side_panel": {
      "default_path": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
  